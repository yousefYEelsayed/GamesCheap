<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:saveEnabled="true"
        tools:context=".fragment.GamesFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/gamesShimmerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/doubleMarginTop"
                android:visibility="visible">
                <GridLayout
                    android:id="@+id/shimmerGridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal">
                    <include layout="@layout/shimmer_steam_epicgames_recycler_item_design"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/marginStart"/>
                    <include layout="@layout/shimmer_steam_epicgames_recycler_item_design"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/marginEnd"/>
                    <include layout="@layout/shimmer_steam_epicgames_recycler_item_design"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/marginStart"
                        android:layout_marginTop="@dimen/marginTop"/>
                    <include layout="@layout/shimmer_steam_epicgames_recycler_item_design"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/marginEnd"
                        android:layout_marginTop="@dimen/marginTop"/>
                </GridLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resultsRecyclerViewLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadingMoreProgressBar"
                android:visibility="invisible"/>
            <include android:id="@+id/serverErrorLayoutInclude" layout="@layout/server_error_screen" android:visibility="gone"/>
            <RelativeLayout
                android:id="@+id/zeroFoundLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/backgroundColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:animateLayoutChanges="true">
                <ImageView
                    android:id="@+id/zeroResultsImageView"
                    android:layout_width="@dimen/no_internet_image_width"
                    android:layout_height="@dimen/no_internet_image_height"
                    android:src="@drawable/scribble"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/zero_results_found_img_desc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/zeroResultsImageView"
                    android:text="We couldn't find any deals"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSize"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/loadingMoreProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>
            <ImageButton
                android:id="@+id/filterButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/filter_button_background"
                android:src="@drawable/ic_baseline_filter_list_white_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="@dimen/maxMarginBottom"
                android:layout_marginEnd="@dimen/smallMarginEnd"
                android:clickable="false"/>
            <com.google.android.gms.ads.AdView
                android:id="@+id/gamesBannerAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/games_screen_banner_ad"
                android:layout_marginTop="@dimen/marginTop"
                android:layout_marginBottom="@dimen/maxMarginBottom"
                app:layout_constraintEnd_toStartOf="@id/filterButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/bottom_sheet_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/game_bottom_sheet_background"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:behavior_peekHeight="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
            <include android:id="@+id/layoutBottomSheetInclude" layout="@layout/games_filter_bottom_sheet" />
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>