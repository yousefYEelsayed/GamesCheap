<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:layout_marginTop="@dimen/smallMarginTop"
    android:layout_marginBottom="@dimen/tinyMarginBottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gameImageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:textColor="@color/shimmerColor"
            android:background="@color/shimmerColor"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_marginStart="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PlaceHolderPla"
                android:textColor="@color/shimmerColor"
                android:textSize="@dimen/textSize"
                android:maxLines="2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/shimmerColor"/>
            <TextView
                android:id="@+id/gamePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1$"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="@dimen/textSize"
                android:maxLines="1"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/tinyMarginBottom" />
            <TextView
                android:id="@+id/oldPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/gamePrice"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/tinyMarginBottom"
                android:layout_marginStart="@dimen/smallMarginStart"
                android:text="1$"
                android:maxLines="1"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="@dimen/textSize"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/shimmerColor"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_marginStart="@dimen/marginStart"
            android:layout_marginEnd="@dimen/marginEnd"
            android:layout_marginTop="@dimen/tinyMarginTop"
            android:layout_marginBottom="@dimen/marginBottom"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>