<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.GameDetailsActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/actionBarRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/game_details_toolbar_background">

            <ImageView
                android:id="@+id/exitImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_new_24_black"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/marginStart"
                android:contentDescription="Exit Button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="@dimen/textSize"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/gameDetailsImageView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.35"
                    android:scaleType="centerCrop"
                    android:src="@color/backgroundColor"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/bottom_sheet_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/game_bottom_sheet_background"
                android:orientation="vertical"
                app:behavior_hideable="false"
                app:behavior_peekHeight="62dp"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                <include android:id="@+id/layoutBottomSheetInclude" layout="@layout/game_details_bottom_sheet_layout" />
            </LinearLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <RelativeLayout
            android:id="@+id/loadingRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/actionBarRelativeLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/backgroundColor"
            tools:visibility="gone">
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="@dimen/lottieWidth"
                android:layout_height="@dimen/lottieHeight"
                android:layout_centerInParent="true"
                app:lottie_fileName="pacman_ghost.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/errorRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/actionBarRelativeLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/backgroundColor"
            android:visibility="gone">
            <ImageView
                android:id="@+id/errorImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_baseline_error_outline_24_black" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sorry Something went wrong..."
                android:textColor="@color/textColor"
                android:layout_below="@id/errorImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
        <WebView
            android:id="@+id/gameWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>