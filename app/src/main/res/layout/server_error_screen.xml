<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/serverErrorMainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">
        <ImageView
            android:id="@+id/serverErrorImageView"
            android:layout_width="@dimen/no_internet_image_width"
            android:layout_height="@dimen/no_internet_image_height"
            android:src="@drawable/danger_skull"
            android:layout_centerInParent="true"
            android:contentDescription="@string/zero_results_found_img_desc"/>
        <TextView
            android:id="@+id/errorConnectingServerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serverErrorImageView"
            android:text="There was a problem connecting to the server"
            android:textColor="@color/textColor"
            android:textSize="@dimen/textSize"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/smallMarginTop"/>
        <Button
            android:id="@+id/serverErrorRetryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retry"
            android:textColor="@color/white"
            android:layout_below="@id/errorConnectingServerTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/smallMarginTop"/>
    </RelativeLayout>
</layout>